
<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @list.image_url %>)">
<h3><%= @list.name %></h3>
</div>

<div class="container">
  <ul class="bookmark-cards">
    <% @list.bookmarks.each do |bookmark| %>
      <li class="list-group-item m-3">
        <div class="card-product">
          <img src="<%= bookmark.movie.poster_url %>" />
          <div class="card-product-infos">
            <h2><%= bookmark.movie.title %></h2>
            <p><%= bookmark.comment %> <strong>relevant info</strong> only.</p>
            <%= link_to "Remove",
                        bookmark_path(bookmark),
                        class: "btn btn-ghost mt-2",
                        method: :delete,
                        data: { confirm: "Are you sure?" } %>
          </div>
        </div>
      </li>
    <% end %>
    <div class="d-flex p-2 bd-highlight justify-content-around">
      <a class="btn btn-flat d-inline-flex p-2 bd-highlight " href="<% link_to lists_path %>">Back</a>
      <%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: "btn btn-flat-lilac" %>
    </div>
  </ul>
</div>
